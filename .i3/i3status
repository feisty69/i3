# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = false
        interval = 1
}

order += "ethernet eno1"
order += "volume master"
order += "disk /home"
order += "cpu_usage"
order += "tztime local"

tztime local {
        format = " %Y-%m-%d   %H:%M:%S "
}

load {
        format = " %1min "
}

disk "/" {
        format = " %avail "
}

volume master {
	format = " Vol %volume "
	format_muted = "Vol muted %volume "
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}

cpu_usage {
        format = " Cpu %usage "
}

ethernet eno1 {
	format_up = " Up %ip "
	format_down = " Down (/) "
}

